<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsItemView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_item_headline_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Headline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_item_author_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Author Name" />

            <TextView
                android:id="@+id/news_item_section_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Section Name" />

            <TextView
                android:id="@+id/news_item_date_published_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Date Published" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
